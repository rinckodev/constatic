{
    "env": { "node": true },
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "parserOptions": {
        "project": true,
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-duplicate-imports": "error",
        "camelcase": "warn",
        "quotes": ["warn", "double"],
        "semi": ["warn","always"],
        "prefer-const":"error",
        "no-var":"off",
        "@typescript-eslint/no-require-imports": "error",
        "@typescript-eslint/await-thenable": "error"
    },
    "ignorePatterns":[
        "build", "dist", "prod", "product", "vendor", "node_modules",
        "/*.config.{mjs,js}", "/*.build.{mjs,js}" 
    ]
}
