{
    "compilerOptions": {
      // "noEmit": true,
      "module": "NodeNext",
      "target": "ESNext",
      "moduleResolution": "NodeNext",
      "resolveJsonModule": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,

      "rootDir": "src",
      "outDir": "build",

      "noUnusedLocals": true,
      "noUnusedParameters": true,

      "baseUrl": "./src",
      "paths": {
        "#helpers": ["./helpers/index.js"],
        "#menus": ["./menus/index.js"],
        "#types": ["./types/index.js"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "deprecated"],
  }