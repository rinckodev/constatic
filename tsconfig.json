{
    "compilerOptions": {
      // "noEmit": true,
      "module": "NodeNext",
      "target": "ESNext",
      "moduleResolution": "NodeNext",
      "resolveJsonModule": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,

      "rootDir": "src",
      "outDir": "build",
      "emitDeclarationOnly": false,

      "noUnusedLocals": true,
      "noUnusedParameters": true,

      "baseUrl": "./src",
      "paths": {
        "#helpers": ["./helpers/index.js"],
        "#prompts": ["./helpers/helper.prompts.js"],
        "#menus": ["./menus/index.js"],
        "#shared/*": ["./shared/*"],
        "#types": ["./@types/index.js"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "deprecated", "dist", "build"],
  }